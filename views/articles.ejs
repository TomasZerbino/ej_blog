<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Articles</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/articles.css" />
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <div id="imagen-de-fondo">
      <div class="container altura-contenedor-header">
        <div class="row">
          <div class="col-7 mx-auto text-white" id="titulo-header">
            <h1>Man must explore, and this is exploration at its greatest</h1>
            <small
              >creado por <%= article.user.firstname %> <%= article.user.lastname %> el <%=
              article.createdAt %>
            </small>
          </div>
        </div>
      </div>
    </div>
    <section>
      <div class="container d-flex flex-direction-row">
        <div class="p-5">
          <img src="<%= article.image %> " alt="" />
        </div>
        <div class="py-5">
          <p><%= article.content %></p>
        </div>
      </div>
    </section>
    <section class="comments">
      <div class="container">
        <h2 class="text-center mb-5">Comments</h2>
        <% for (const comment of article.comments) { %>
        <div class="border p-5 mb-5">
          <p><%= comment.content %></p>
        </div>
        <% } %>
      </div>
    </section>

    <%- include('./partials/footer') %>
  </body>
</html>
